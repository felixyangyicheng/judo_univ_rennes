@page "/posts"
@implements IAsyncDisposable
@if (Posts == null)
{
    <Bounce></Bounce>
}
else
{
    foreach (var p in Posts)
    {
        <MudCard Class="flex-row-reverse">
            <MudCardHeader Style="display: -webkit-box;direction: ltr;">
                <CardHeaderContent>
                    <MudText Typo="Typo.caption">
                    @p.Title
                    </MudText>
                </CardHeaderContent>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Secondary" Square="true">@(p.ApiUserName.Substring(0, 1))</MudAvatar>
                </CardHeaderAvatar>

            </MudCardHeader>

            <MudCardContent Class="rtl d-flex">
             
                    @((MarkupString)p.Content)
              
            </MudCardContent>

        </MudCard>
    }
}